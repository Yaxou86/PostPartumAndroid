<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.androidx.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <TextView
        android:id="@+id/total_score"
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:textColor="@color/black"
        app2:layout_constraintBottom_toTopOf="@+id/scale"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintHorizontal_bias="0.497"
        app2:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/"
        app:layout_constraintStart_toStartOf="parent" />




    <TextView
        android:id="@+id/result_text"
        android:layout_width="332dp"
        android:layout_height="231dp"
        android:layout_marginBottom="48dp"
        android:textColor="@color/cardview_dark_background"
        android:fontFamily="monospace"
        android:text="@string/result_text"
        android:textAlignment="center"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/join"
        app:layout_constraintEnd_toStartOf="@+id/join"
        app:layout_constraintStart_toEndOf="@+id/d" />

    <TextView
        android:id="@+id/result_title"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/gray"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/result_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        app2:layout_constraintBottom_toTopOf="@+id/total_score"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintHorizontal_bias="0.498"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintVertical_bias="0.776" />

    <TextView
        android:id="@+id/scale"
        android:layout_width="296dp"
        android:layout_height="62dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        app2:layout_constraintBottom_toTopOf="@+id/result_text"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintHorizontal_bias="0.495"
        app2:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>