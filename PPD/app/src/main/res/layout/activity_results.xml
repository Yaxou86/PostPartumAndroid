<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.androidx.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <TextView
        android:id="@+id/total_score"
        android:layout_width="204dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/plum"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="133dp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="332dp"
        android:layout_height="231dp"
        android:layout_marginBottom="104dp"
        android:fontFamily="serif-monospace"
        android:text="@string/result_text"
        android:textAlignment="center"
        android:textColor="@color/black"
        app2:layout_constraintBottom_toTopOf="@+id/schedule_button"
        app2:layout_constraintEnd_toEndOf="parent"

        app2:layout_constraintHorizontal_bias="0.493"
        app2:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/join"
        app:layout_constraintEnd_toStartOf="@+id/join"
        app:layout_constraintStart_toEndOf="@+id/d" />

    <Button
        android:id="@+id/schedule_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="Schedule your appointment"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_title"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/plum"
        android:fontFamily="monospace"
        android:text="@string/result_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        app2:layout_constraintBottom_toTopOf="@+id/total_score"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scale"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:fontFamily="serif-monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app2:layout_constraintBottom_toTopOf="@+id/result_text"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/total_score" />


</androidx.constraintlayout.widget.ConstraintLayout>