<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.androidx.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <TextView
        android:id="@+id/total_score"
        android:layout_width="167dp"
        android:layout_height="34dp"
        android:background="@color/testButton"
        android:fontFamily="Monospace"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toTopOf="parent"
        app2:layout_constraintVertical_bias="0.338"
        app:layout_constraintBottom_toBottomOf="@+id/"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="407dp"
        android:layout_height="189dp"
        android:background="@color/testButton"
        android:fontFamily="monospace"
        android:text="@string/result_text"
        android:shadowColor="@color/lavender_blush"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        app2:layout_constraintBottom_toBottomOf="parent"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/total_score"
        app2:layout_constraintVertical_bias="0.645"
        app:layout_constraintBottom_toBottomOf="@+id/join"
        app:layout_constraintEnd_toStartOf="@+id/join"
        app:layout_constraintStart_toEndOf="@+id/d" />

    <TextView
        android:id="@+id/result_title"
        android:layout_width="413dp"
        android:layout_height="31dp"
        android:background="@color/testButton"
        android:fontFamily="serif-monospace"
        android:text="@string/result_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app2:layout_constraintBottom_toTopOf="@+id/total_score"
        app2:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/scale"
        android:layout_width="313dp"
        android:layout_height="52dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="10sp"
        android:textStyle="bold"
        app2:layout_constraintBottom_toTopOf="@+id/result_text"
        app2:layout_constraintEnd_toEndOf="parent"
        app2:layout_constraintStart_toStartOf="parent"
        app2:layout_constraintTop_toBottomOf="@+id/total_score"
        app2:layout_constraintVertical_bias="0.129" />


</androidx.constraintlayout.widget.ConstraintLayout>